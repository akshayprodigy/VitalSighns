<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:id="@+id/all_holder_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp">
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:layout_marginEnd="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_border_down"
                android:text="Heart Rate"
                android:textColor="@color/blue"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="21sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_border_top">
                <Button
                    android:id="@+id/All_HR_Range"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="7dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="60 - 90"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:background="@color/loader_green"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/All_HR_Range"
                    android:layout_marginBottom="5dp"
                    android:text="Normal Range"
                    android:textColor="@color/blue"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:layout_marginStart="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_border_down"
                android:text="Oxygen Saturation"
                android:textColor="@color/blue"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="21sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_border_top">
                <Button
                    android:id="@+id/All_O2_Range"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="7dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="95 - 100"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:background="@color/loader_green"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/All_O2_Range"
                    android:layout_marginBottom="5dp"
                    android:text="Normal Range"
                    android:textColor="@color/blue"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/all_holder_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_below="@+id/all_holder_one"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:layout_marginEnd="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_border_down"
                android:text="Blood Pressure"
                android:textColor="@color/blue"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="21sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_border_top">
                <Button
                    android:id="@+id/All_BPR_Range"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="7dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="120/80 - 140/90"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:background="@color/loader_green"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/All_BPR_Range"
                    android:layout_marginBottom="5dp"
                    android:text="Normal Range"
                    android:textColor="@color/blue"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:layout_marginStart="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_border_down"
                android:text="Respiration Result"
                android:textColor="@color/blue"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="21sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_border_top">
                <Button
                    android:id="@+id/All_RR_Range"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="7dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="12 - 20"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:background="@color/loader_green"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/All_RR_Range"
                    android:layout_marginBottom="5dp"
                    android:text="Normal Range"
                    android:textColor="@color/blue"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/SendBP"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/all_holder_two"
        android:layout_marginTop="50dp"
        android:text="Share Via"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:textAlignment="center"
        android:background="@color/loader_green"
        tools:ignore="HardcodedText"
        android:visibility="visible"/>

</RelativeLayout>