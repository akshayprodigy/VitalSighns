<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/history_content_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Blood Pressure"
        android:textSize="21sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/history_content_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="12/12/12 15:55:45"
        android:textSize="18sp"
        android:textStyle="normal"
        android:fontFamily="cursive"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/history_content_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_content_time"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="85 BP"
        android:textSize="21sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        tools:ignore="HardcodedText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/history_content_result"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/black"/>

</RelativeLayout>