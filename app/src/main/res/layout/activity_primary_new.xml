<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/primary_anim"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:lottie_autoPlay="true"
        app:lottie_enableMergePathsForKitKatAndAbove="true"
        app:lottie_fileName="heartbeat-medical.json"
        app:lottie_loop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/primary_anim"
        android:layout_above="@+id/primary_bottom_holder"
        android:scrollbars="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/primary_one_holder"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_alignParentEnd="true"
                        app:cardBackgroundColor="@color/grey_dark"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="25dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardPreventCornerOverlap="true">
                        <RelativeLayout
                            android:id="@+id/HR"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_primary_cards">
                            <ImageView
                                android:id="@+id/primary_img_01"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerInParent="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/heartrate"
                                tools:ignore="ContentDescription" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/primary_img_01"
                                android:layout_marginTop="10dp"
                                android:layout_centerInParent="true"
                                android:text="Heart Rate"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                tools:ignore="HardcodedText" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_alignParentStart="true"
                        app:cardBackgroundColor="@color/grey_dark"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="25dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardPreventCornerOverlap="true">
                        <RelativeLayout
                            android:id="@+id/O2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_primary_cards">
                            <ImageView
                                android:id="@+id/primary_img_02"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerInParent="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/oxygen_tank"
                                tools:ignore="ContentDescription" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/primary_img_02"
                                android:layout_marginTop="10dp"
                                android:layout_centerInParent="true"
                                android:text="Oxygen Level"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                tools:ignore="HardcodedText" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/primary_two_holder"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_below="@+id/primary_one_holder"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_alignParentEnd="true"
                        app:cardBackgroundColor="@color/grey_dark"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="25dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardPreventCornerOverlap="true">
                        <RelativeLayout
                            android:id="@+id/BP"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_primary_cards">
                            <ImageView
                                android:id="@+id/primary_img_03"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerInParent="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/blood_pressure_gauge"
                                tools:ignore="ContentDescription" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/primary_img_03"
                                android:layout_marginTop="10dp"
                                android:layout_centerInParent="true"
                                android:text="Blood Pressure"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                tools:ignore="HardcodedText" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_alignParentStart="true"
                        app:cardBackgroundColor="@color/grey_dark"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="25dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardPreventCornerOverlap="true">
                        <RelativeLayout
                            android:id="@+id/RR"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_primary_cards">
                            <ImageView
                                android:id="@+id/primary_img_04"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerInParent="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/respiration"
                                tools:ignore="ContentDescription" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/primary_img_04"
                                android:layout_marginTop="10dp"
                                android:layout_centerInParent="true"
                                android:text="Respiration Rate"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                tools:ignore="HardcodedText" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/primary_three_holder"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_below="@+id/primary_two_holder"
                android:layout_marginTop="0dp"
                android:baselineAligned="false">
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="25dp"
                    app:cardBackgroundColor="@color/grey_dark"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="5dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_centerInParent="true">
                    <RelativeLayout
                        android:id="@+id/VS"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_primary_cards">
                        <ImageView
                            android:id="@+id/primary_img_05"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerInParent="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/patient"
                            tools:ignore="ContentDescription" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/primary_img_05"
                            android:layout_marginTop="10dp"
                            android:layout_centerInParent="true"
                            android:text="All Test"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/primary_bottom_holder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_border_test"
            android:text="Test"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="21sp"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/History"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_border_history"
            android:text="History"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="21sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</RelativeLayout>