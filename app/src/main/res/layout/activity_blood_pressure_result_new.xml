<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:id="@+id/BPR_Result_Holder"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_marginTop="100dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_border_down"
            android:text="Blood Pressure"
            android:textColor="@color/blue"
            android:textAlignment="center"
            android:textSize="23sp"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/BPT"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="21sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_border_top">
            <Button
                android:id="@+id/BPR_Range"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="120/80 - 140/90"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textAlignment="center"
                android:background="@color/loader_green"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/BPR_Range"
                android:layout_marginBottom="5dp"
                android:text="Normal Range"
                android:textColor="@color/blue"
                android:textAlignment="center"
                android:textSize="21sp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/SendBP"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/BPR_Result_Holder"
        android:layout_marginTop="150dp"
        android:text="Share Via"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:textAlignment="center"
        android:background="@color/loader_green"
        tools:ignore="HardcodedText" />

</RelativeLayout>